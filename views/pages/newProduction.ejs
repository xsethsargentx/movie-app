<main class="main" id="main">
  <div class="container">
    <h1 class="page-title">Add a New Production Company</h1>

    <form action="/production" method="POST" class="form">
      <div class="form-group">
        <label for="production">Company Name:</label>
        <input type="text" id="production" name="production" required placeholder="Enter production company">
      </div>

      <button type="submit" class="btn btn-primary">Add Production</button>
    </form>
  </div>
</main>

