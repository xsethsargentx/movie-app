<%- include('../partials/header') %>

<main class="main" id="main">
  <div class="container">
    <h1 class="page-title">Add a New Movie</h1>

    <form action="/movies/db" method="POST" class="form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required placeholder="Enter movie title">
      </div>

      <div class="form-group">
        <label for="yr_released">Year Released:</label>
        <input type="number" id="yr_released" name="yr_released" placeholder="1999">
      </div>

      <div class="form-group">
        <label for="production_id">Production:</label>
        <select id="production_id" name="production_id">
          <% productions.forEach(p => { %>
            <option value="<%= p.production_id %>"><%= p.production %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="genre_id">Genre:</label>
        <select id="genre_id" name="genre_id">
          <% formGenres.forEach(g => { %>
            <option value="<%= g.genre_id %>"><%= g.genre %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="director_id">Director:</label>
        <select id="director_id" name="director_id">
          <% directors.forEach(d => { %>
            <option value="<%= d.director_id %>"><%= d.first_name %> <%= d.last_name %></option>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Add Movie</button>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>