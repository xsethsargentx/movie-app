<main class="main" id="main">
  <div class="container">
    <h1 class="page-title">Add a New Genre</h1>

    <form action="/genres" method="POST" class="form">
      <div class="form-group">
        <label for="genre">Genre Name:</label>
        <input type="text" id="genre" name="genre" required placeholder="Enter genre name">
      </div>

      <button type="submit" class="btn btn-primary">Add Genre</button>
    </form>
  </div>
</main>

